@using Casgem_MillionDapper.DAL;
@model IEnumerable<Plates>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<br />
<br />
<div style="background-color: #f5f5f5; padding: 20px;">
    <div style="max-width: 600px; margin: 0 auto; text-align: center;">
        <form method="get" action="@Url.Action("Index")" style="margin-bottom: 20px;">
            <label for="searchString" style="color: #333; font-weight: bold; display: block; margin-bottom: 5px;">Marka Ara:</label>
            <div style="display: flex; justify-content: center; align-items: center;">
                <input type="text" id="searchString" name="searchString" style="border: 1px solid #ccc; border-radius: 20px; padding: 8px; width: 70%;" />
                <button type="submit" class="btn btn-primary" style="border-radius: 20px; margin-left: 10px;">Ara</button> <p>    </p>
                <a href="/Default/Index" class="btn btn-secondary">İstatistikler</a>
            </div>
        </form>
        
    </div>
</div>

<div style="max-width: 800px; margin: 0 auto;">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Marka</th>
                <th>Renk</th>
                <th>Vites Türü</th>
                <th>Yakıt Tipi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.BRAND</td>
                    <td>@item.COLOR</td>
                    <td>@item.SHIFTTYPE</td>
                    <td>@item.FUEL</td>
                </tr>
            }
        </tbody>
    </table>
</div>
